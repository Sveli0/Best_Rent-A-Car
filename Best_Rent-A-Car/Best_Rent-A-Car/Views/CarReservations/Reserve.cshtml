@using Best_Rent_A_Car.Data;
@using Microsoft.AspNetCore.Identity;
@using static Best_Rent_A_Car.Controllers.CarReservationsController
@model Best_Rent_A_Car.Controllers.CarReservationsController.CreateViewModel

@inject SignInManager<User> _signInManager;
@inject UserManager<User> _userManager;



@{
    ViewData["Title"] = "Create";
}

<h4>Make A Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Reserve">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarReservation.CarID" class="control-label"></label>
                <select asp-for="CarReservation.CarID" class="form-control" asp-items="@ViewBag.Cars"></select>
                <form1 asp-action="Search">

                    <div class="form-group">
                        <input asp-for="CarReservation.StartDate" class="form-control" type="hidden" readonly />
                    </div>
                    <div class="form-group">
                        <input asp-for="CarReservation.EndDate" type = "hidden" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <input type = "hidden" asp-for="CarReservation.VisibleUserID" class="form-control" value="@ViewData["LoggedInUserId"]" readonly />
                    </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Reserve" class="btn btn-primary" />
            </div>
            <h2>Available Cars</h2>
            @foreach (var car in Model.AvailableCars)
            {
                <div>
                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.carID">Car: @car.Info</a>
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
